{
  "$schema": "https://opencode.ai/config.json",
  "formatter": {
    "black": {
      "command": ["black", "$FILE"],
      "extensions": [".py", ".pyi"]
    }
  },
  "enabled_providers": ["volcengine", "coco-gemini", "coco-gpt"],
  "provider": {
    "coco-gemini": {
      "npm": "@ai-sdk/google",
      "name": "coco (Gemini family)",
      "options": {
        "baseURL": "http://localhost:9998/v1",
        "apiKey": "secret"
      },
      "models": {
        "gemini-3-flash-preview": {
          "name": "Gemini Flash",
          "attachment": true,
          "reasoning": true,
          "tool_call": true,
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "limit": {
            "context": 1048576,
            "output": 65536
          }
        },
        "gemini-3-pro-preview-new": {
          "name": "Gemini Pro",
          "attachment": true,
          "reasoning": true,
          "tool_call": true,
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "limit": {
            "context": 1048576,
            "output": 65536
          }
        }
      }
    },
    "coco-gpt": {
      "npm": "@ai-sdk/openai",
      "name": "coco (GPT family)",
      "options": {
        "baseURL": "http://localhost:9998/v1",
        "apiKey": "secret"
      },
      "models": {
        "gpt-5": {
          "name": "GPT-5",
          "attachment": true,
          "reasoning": true,
          "tool_call": true,
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "limit": {
            "context": 400000,
            "output": 128000
          }
        },
        "gpt-5.1": {
          "name": "GPT-5.1",
          "attachment": true,
          "reasoning": true,
          "tool_call": true,
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "limit": {
            "context": 400000,
            "output": 128000
          }
        },
        "gpt-5.2": {
          "name": "GPT-5.2",
          "attachment": true,
          "reasoning": true,
          "tool_call": true,
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "limit": {
            "context": 400000,
            "output": 128000
          }
        }
      }
    },
    "volcengine": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "volcengine",
      "options": {
        "baseURL": "https://ark.cn-beijing.volces.com/api/coding/v3"
      },
      "models": {
        "ark-code-latest": {
          "name": "Ark-Code",
          "limit": {
            "context": 256000,
            "output": 256000
          },
          "options": {
            "thinking": {
              "type": "enabled"
            }
          }
        }
      }
    },
    "google": {
      "models": {
       "gemini-3-flash-preview": {
         "options": {
           "thinkingConfig": {
             "thinkingLevel": "high",
             "includeThoughts": true
           }
         }
       },
       "gemini-3-pro-preview": {
         "options": {
           "thinkingConfig": {
             "thinkingLevel": "high",
             "includeThoughts": true
           }
         }
       }
      }
    }
  },
  "plugin": [
    "opencode-gemini-auth@latest",
    "@mohak34/opencode-notifier@latest",
    "oh-my-opencode"
  ],
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "ask",

      "workspace/run.sh *": "allow",

      "pwd": "allow",
      "sort": "allow",

      "touch *": "allow",
      "mkdir *": "allow",
      "rg *": "allow",
      "grep *": "allow",
      "test *": "allow",
      "echo *": "allow",
      "curl *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "tee *": "allow",
      "sleep *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "sed *": "allow",
      "find *": "allow",
      "xargs find *": "allow",
      "fd *": "allow",
      "awk *": "allow",
      "which *": "allow",
      "sort *": "allow",

      "git diff *": "allow",
      "git blame *": "allow",
      "git status *": "allow",
      "git show *": "allow",

      "make *": "allow",
      "python3 -m py_compile *": "allow",
      "go build *": "allow",
      "npm install *": "allow",
      "npx *": "allow",
      "npm run *": "allow"
    },
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "ask"
  }
}
