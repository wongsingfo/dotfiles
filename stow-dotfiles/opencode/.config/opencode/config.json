{
  "$schema": "https://opencode.ai/config.json",
  "formatter": {
    "black": {
      "command": ["black", "$FILE"],
      "extensions": [".py", ".pyi"]
    }
  },
  "enabled_providers": ["volcengine"],
  "provider": {
    "volcengine": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "volcengine",
      "options": {
        "baseURL": "https://ark.cn-beijing.volces.com/api/coding/v3"
      },
      "models": {
        "ark-code-latest": {
          "name": "ark-code-latest",
          "limit": {
            "context": 256000,
            "output": 256000
          },
          "options": {
            "thinking": {
              "type": "enabled"
            }
          }
        }
      }
    }
  },
  "plugin": [
    "opencode-gemini-auth@latest",
    "@mohak34/opencode-notifier@latest",
    "oh-my-opencode"
  ],
  "permission": {
    "edit": "allow",
    "bash": {
      "*": "ask",

      "pwd": "allow",
      "touch *": "allow",
      "mkdir *": "allow",
      "rg *": "allow",
      "grep *": "allow",
      "test *": "allow",
      "echo *": "allow",
      "curl *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "tee *": "allow",
      "sleep *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "sed *": "allow",
      "find *": "allow",
      "fd *": "allow",
      "awk *": "allow",
      "which *": "allow",

      "make *": "allow",
      "python3 -m py_compile *": "allow",
      "go build *": "allow",
      "npm install *": "allow",
      "npx *": "allow",
      "npm run *": "allow"
    },
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "ask"
  }
}
